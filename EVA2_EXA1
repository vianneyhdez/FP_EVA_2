package eva2_exa1;

import java.util.Scanner;

public class EVA2_EXA1 {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Capturar los tiempos de cada prueba
        System.out.print("Ingrese el tiempo de natación (minutos): ");
        int natacion = sc.nextInt();

        System.out.print("Ingrese el tiempo de ciclismo (minutos): ");
        int ciclismo = sc.nextInt();

        System.out.print("Ingrese el tiempo de carrera (minutos): ");
        int carrera = sc.nextInt();

        // Calcular tiempo total
        int total = natacion + ciclismo + carrera;

        // Clasificación según los tiempos
        if (total < 120 && natacion <= 60 && ciclismo <= 60 && carrera <= 60) {
            System.out.println("Clasificación: Excelente");
        } else if (total < 150 || (natacion <= 70 && ciclismo <= 70 && carrera <= 70)) {
            System.out.println("Clasificación: Buena");
        } else {
            System.out.println("Clasificación: Regular");
        }

        sc.close();
    }
}
